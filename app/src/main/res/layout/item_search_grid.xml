<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_search_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/mini_margin"
    app:cardCornerRadius="@dimen/small_card_view_corner_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <scuse.com.dietaryanalyze001.ui.view.SquaredFrameLayout
            android:id="@+id/sf_item_search_meal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/mini_margin"
            android:orientation="vertical">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/img_item_search_meal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                fresco:placeholderImage="@drawable/img_loading" />

        </scuse.com.dietaryanalyze001.ui.view.SquaredFrameLayout>

        <LinearLayout
            android:id="@+id/ll_item_search_info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/middle_margin"
            android:layout_marginStart="@dimen/middle_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_search_meal_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="红烧肉"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@dimen/middle_content_font_size" />

            <TextView
                android:id="@+id/tv_item_search_meal_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/small_margin"
                android:layout_marginTop="@dimen/small_margin"
                android:maxLines="3"
                android:text="五花肉、土豆、糖"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="@dimen/small_content_font_size" />

        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>